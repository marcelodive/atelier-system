{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "loopback"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "angular": "readonly",
        "moment": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": ["error", "always"],
        "camelcase": ["error", { "properties": "never" }],
        "max-len": ["error", { "code": 120 }]
    }
}